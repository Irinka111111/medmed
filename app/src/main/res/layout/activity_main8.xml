<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-41dp">

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:textColor="#1A6FEE"
            android:text="Пропустить" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Создайте пароль"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Для защиты ваших персональных данных" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/oval" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/oval" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/oval" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/oval" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/button9"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:backgroundTint="#F5F5F9"
                android:text="1"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="2"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/button11"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="3"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/button12"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:backgroundTint="#F5F5F9"
                android:text="4"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/button13"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="5"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/button14"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="6"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/button15"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:backgroundTint="#F5F5F9"
                android:text="7"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/button16"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="8"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/button17"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="9"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="3"
                app:layout_row="3" />

            <Button
                android:id="@+id/button18"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="#F5F5F9"
                android:text="0"
                android:textColor="#000000"
                android:textSize="24dp"
                app:cornerRadius="1000000dp"
                app:layout_column="2"
                app:layout_row="4" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="45dp"
                app:layout_column="3"
                app:layout_row="4"
                app:srcCompat="@drawable/strelka" />

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>