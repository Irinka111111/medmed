<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="590dp"
        android:layout_marginTop="136dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Введите код из E-mail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextEmailAddress7"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/bg"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextTextEmailAddress6"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextTextEmailAddress5"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextTextEmailAddress4"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Отправить код повторно можно\nбудет через 59 секунд"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>